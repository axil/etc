[user]
	name = Lev Maximov
	email = lev.maximov@gmail.com
[alias]
	ci = commit
	co = checkout
	mt = mergetool
	st = status
	br = branch
	sb = show-branch
	ls = ls-files -r --name-only
	ll = ls-files -r
[core]
	#autocrlf = false
	excludesfile = ~/.gitignore
[merge]
	tool = vim
[mergetool "vim"]
	cmd = vim -d $LOCAL $MERGED $REMOTE
	trustExitCode = true
[mergetool "vb"]
	cmd = vim -d $LOCAL $BASE $REMOTE
	trustExitCode = true
[color]
	branch = auto
	diff = auto
[push]
	default = current
